ORE = @scrap
ubind(@mono)

if @unit.firstItem === null
	|| (@unit.firstItem == ORE && @unit.totalItems < 20)
	ulocate(ore, ORE, ox, oy)
	approach(ox, oy, 6)
	mine(ox, oy)
else
	if @unit.mining != 0
		stop()
	end
	ulocate(building, core, false, cx, cy, core)
	approach(cx, cy, 5)
	itemDrop(core, 999)
end
